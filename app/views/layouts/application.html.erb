<!DOCTYPE html>
<html>
  <head>
    <title>DoubleDigest</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <!-- NAVBAR -->
    <nav>
      <div class="nav-wrapper">

      <!-- TRENDS SIDEBAR -->
        <ul id="slide-out" class="side-nav">
          <% @trends.each do |tweet| %>
            <li><a href="#!"><%= tweet.hashtags %></a></li>
          <% end %>
        </ul>
        <a href="#" data-activates="slide-out" class="button-collapse show-on-large">
          <i class="mdi-navigation-menu"></i>
        </a>

        <!-- LOGO -->
        <div class="brand-logo center">Sway News</div>

        <!-- SIGNUP + SIGNIN -->
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if current_user %>
          <li>Welcome <strong><%= current_user.name%></strong></li>
          <li><%= link_to 'Sign out', signout_path %></li>
          <%else%>
          <li><%= link_to "Sign in with Twitter", "/auth/twitter" %></li>
          <li><%= link_to "Sign Up", '/signup'%></li>
          <%end%>
        </ul>

      </div>
    </nav>

    <!-- PAGE LAYOUT -->
    <div class="row">
      <div class="col s12 m4 l3"></div>

      <!-- VIDEO LAYOUT -->
      <div class="row">
        <div class="col s6 m6 l6"> <div id="results"></div></div>
        <div class="col s6 m6 l6"><div id="foxresults"></div></div>
      </div>

    </div>

  <%= yield %>

  </body>
</html>
